{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "esnext",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types"
  },
  "exclude": [
    "**/node_modules/**",
    ".*/**",
    "types"
  ]
}
