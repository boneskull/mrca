{
  "name": "mrca",
  "version": "0.0.0",
  "description": "most recent common ancestor: find ancestors for changed files",
  "main": "src/index.js",
  "scripts": {
    "posttest": "markdownlint README.md && eslint .",
    "test": "nyc mocha",
    "release": "standard-version -a",
    "generate-declarations": "tsc",
    "generate-docs": "jsdoc2md --files 'src/*.js' --configure jsdoc.conf.json > API.md",
    "prepublishOnly": "npm run generate-declarations && npm run generate-docs",
    "test-ci": "nyc mocha --reporter=mocha-github-actions-reporter"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/boneskull/mrca"
  },
  "files": [
    "src",
    "typings"
  ],
  "keywords": [
    "dependency",
    "dependencies",
    "modules",
    "typescript",
    "webpack",
    "watch",
    "changes",
    "files",
    "esm",
    "testing",
    "mocha"
  ],
  "author": "Christopher Hiller <boneskull@boneskull.com> (https://boneskull.com/)",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "debug": "^4.2.0",
    "file-entry-cache": "^5.0.1",
    "filing-cabinet": "^2.6.0",
    "find-cache-dir": "^3.3.1",
    "flat-cache": "^2.0.1",
    "multimatch": "^5.0.0",
    "precinct": "^6.3.1",
    "resolve-from": "^5.0.0",
    "temp-dir": "^2.0.0",
    "username": "^5.1.0",
    "xdg-basedir": "^4.0.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/file-entry-cache": "^5.0.1",
    "@types/filing-cabinet": "^2.5.0",
    "@types/find-cache-dir": "^3.2.0",
    "@types/flat-cache": "^2.0.0",
    "@types/mocha": "^8.0.4",
    "@types/node": "^14.14.7",
    "@types/sinon": "^9.0.8",
    "babel-eslint": "^10.1.0",
    "escape-string-regexp": "^4.0.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-semistandard": "^15.0.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.1.0",
    "husky": "^4.3.0",
    "jsdoc": "^3.6.6",
    "jsdoc-to-markdown": "^6.0.1",
    "jsdoc-ts-utils": "^1.1.2",
    "lint-staged": "^10.5.1",
    "markdownlint-cli": "^0.24.0",
    "mocha": "^8.2.1",
    "nyc": "^15.1.0",
    "prettier": "^2.1.2",
    "rewiremock": "^3.14.3",
    "sinon": "^9.2.1",
    "standard-version": "^9.0.0",
    "typescript": "^4.2.0-dev.20201109",
    "unexpected": "^11.15.0",
    "unexpected-map": "^2.1.0",
    "unexpected-set": "^3.0.0",
    "unexpected-sinon": "^10.11.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.{yml,md}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false,
    "endOfLine": "auto"
  },
  "types": "./types/index.d.ts"
}
